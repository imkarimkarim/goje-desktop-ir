---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900 text-gray-50 w-full">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: center;
  }

  #logo {
    -webkit-filter: drop-shadow(0px 0px 40px #ff2735);
    filter: drop-shadow(0px 0px 40px #ff2735);
    z-index: -1;
  }

  @media (min-width: 768px) {
    img {
      height: 400px;
    }
  }
</style>
